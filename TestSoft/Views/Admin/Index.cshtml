@model TestSoft.Models.TableCreationModel
<!-- Views/Admin/Index.cshtml -->

<form asp-action="CreateTable" method="post">
    <div class="form-group">
        <label asp-for="TableName"></label>
        <input asp-for="TableName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Columns">Column Names (comma-separated)</label>
        <input type="text" id="Columns" name="Columns" class="form-control" />
    </div>
    <div class="form-group">
        <label for="RowCount">Number of Rows</label>
        <input type="number" id="RowCount" name="RowCount" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Create Table</button>
</form>
