@{
    ViewData["Title"] = "Home Page";
}
@model TableModel
@using TestSoft
<div class="text-center">
    <form method="post" action="/Table/Create">
        <div class="form-group">
            <label asp-for="TableName">Имя таблицы:</label>
            <input asp-for="TableName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Columns">Названия столбцов (через запятую):</label>
            <input asp-for="Columns" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Создать таблицу</button>
    </form>
</div>
